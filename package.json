{
  "name": "curator",
  "version": "1.0.0",
  "description": "Save article with Nightmare.js",
  "main": "src/index.js",
  "scripts": {
    "build": "npm run clean && mkdir -p dist && babel src -s -D -d dist",
    "clean": "rimraf dist",
    "dev": "nodemon --inspect src/index.js --exec \"node -r babel-register\"",
    "prestart": "npm run -s build",
    "start": "node dist/index.js",
    "test": "jest"
  },
  "author": "Fernando Paredes <nano@fdp.io>",
  "license": "MIT",
  "dependencies": {
    "body-parser": "^1.17.1",
    "express": "^4.15.2",
    "nightmare": "^2.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-jest": "^19.0.0",
    "babel-preset-env": "^1.3.2",
    "babel-register": "^6.24.0",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0"
  },
  "babel": {
    "presets": [
      [
        "env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "jest": {
    "modulePaths": [
      "<rootDir>/src"
    ],
    "testEnvironment": "node"
  },
  "directories": {
    "test": "test"
  }
}
